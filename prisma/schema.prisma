generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id          Int           @id @default(autoincrement())
  title       String
  content     String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  edit_groups String[]
  view_groups String[]
  path        String
  versions    PageVersion[]
  editLocks   EditLock[]
}

model EditLock {
  id         Int      @id @default(autoincrement())
  short_id   String   @default("")  // 4-char human-readable session token
  page_id    Int
  username   String
  created_at DateTime @default(now())
  page       Page     @relation(fields: [page_id], references: [id], onDelete: Cascade)

  @@map("edit_locks")
}

model PageVersion {
  id             Int      @id @default(autoincrement())
  page_id        Int
  version        Int
  title          String
  content        String
  path           String
  edit_groups    String[]
  view_groups    String[]
  edited_by      String
  edited_at      DateTime @default(now())
  change_summary String?
  content_hash   String?  // Hash of content for deduplication
  is_draft       Boolean  @default(false)
  page           Page     @relation(fields: [page_id], references: [id], onDelete: Cascade)

  @@unique([page_id, version])
  @@map("page_versions")
}

model Group {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  userGroups UserGroup[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Better Auth username plugin fields
  username        String?  @unique
  displayUsername String?

  // Relations
  userGroups UserGroup[]
  accounts   Account[]
  sessions   Session[]
  media      Media[]
}

model UserGroup {
  id        Int     @id @default(autoincrement())
  userId    String
  groupId   Int
  
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  group     Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([userId, groupId])
}

// Better Auth Account model (OAuth + Credentials)
model Account {
  id     String @id @default(cuid())
  userId String

  // Better Auth fields (camelCase)
  accountId  String // Provider's account ID or userId for credentials
  providerId String // Provider identifier (e.g., "keycloak", "credentials")

  // OAuth tokens
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?

  // Credentials (password for username/password auth)
  password String? @db.Text

  // Legacy NextAuth fields (for backwards compatibility during migration)
  type              String?
  provider          String?
  providerAccountId String?
  expiresAt         Int?
  tokenType         String?
  sessionState      String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId]) // Legacy constraint
  @@unique([providerId, accountId]) // Better Auth constraint
}

// Better Auth Session model
model Session {
  id        String   @id @default(cuid())
  token     String   @unique // Renamed from sessionToken
  userId    String
  expiresAt DateTime // Renamed from expires

  // Better Auth security tracking
  ipAddress String?
  userAgent String? @db.Text

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Better Auth Verification model (renamed from VerificationToken)
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String   @unique // Renamed from token
  expiresAt  DateTime // Renamed from expires

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id        Int      @id @default(autoincrement())
  filename  String
  mimetype  String
  data      Bytes
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  @@map("Image")
}

model SiteSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String?  @db.Text
  encrypted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BackupJob {
  id          Int      @id @default(autoincrement())
  status      String   // 'pending', 'running', 'completed', 'failed'
  startedAt   DateTime @default(now())
  completedAt DateTime?
  error       String?  @db.Text
  commitHash  String?
  exportPath  String?
  triggeredBy String   // user ID who triggered the backup
  jobType     String   @default("auto") // 'auto', 'manual'
}
